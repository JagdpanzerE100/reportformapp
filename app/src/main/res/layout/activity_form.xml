<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98A094"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Report Form"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/formName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_black"
                android:fontFamily="@font/raleway_bold"
                android:hint="Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/formEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/light_black"
                android:fontFamily="@font/raleway_bold"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/formPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_black"
                android:fontFamily="@font/raleway_bold"
                android:hint="Phone Number "
                android:inputType="phone"
                android:maxLength="8"
                android:minHeight="48dp"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/formAddress"
                    android:layout_width="239dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/light_black"
                    android:fontFamily="@font/raleway_bold"
                    android:hint="Address"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/formPostal"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_black"
                    android:fontFamily="@font/raleway_bold"
                    android:hint="Postal Code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:minHeight="48dp"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </TableRow>

            <Button
                android:id="@+id/upload_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/raleway_bold"
                android:text="Upload Picture"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="#6E867F" />

            <ImageView
                android:id="@+id/preview_img"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/light_black" />

            <EditText
                android:id="@+id/formDescription"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/light_black"
                android:breakStrategy="balanced"
                android:fitsSystemWindows="true"
                android:fontFamily="@font/raleway_bold"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:padding="5dp"
                android:singleLine="false"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#6E867F"
                android:elevation="4dp"
                android:fontFamily="@font/raleway_bold"
                android:minHeight="48dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="#69B09C" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>